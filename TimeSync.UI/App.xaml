<Application x:Class="TimeSync.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TimeSync.UI"
             xmlns:src="clr-namespace:TimeSync.Model;assembly=TimeSync.Model"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type src:Timeregistration}">
            <StackPanel Orientation="Horizontal">
                <ComboBox ItemsSource="{Binding CaseId}"/>
                <TextBox Text="{Binding Customer}"/>
                <!-- the other controls with bindings -->
            </StackPanel>
        </DataTemplate>
    </Application.Resources>
</Application>
