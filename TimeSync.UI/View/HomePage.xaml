<Page x:Class="TimeSync.UI.View.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TimeSync.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="Homepage">



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="{StaticResource WindowColor}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button Margin="0,0,0,0" Width="150"
                        Height="50" HorizontalAlignment="Right" BorderBrush="{x:Null}" Foreground="{x:Null}" Grid.Row="0"
                    Click="ButtonBase_OnClickUserAccount">
                <Label >Account information</Label>
            </Button>
            <!-- View Toolkits button -->
            <Button Margin="0,0,0,0" Width="150"
                        Height="50" HorizontalAlignment="Right" BorderBrush="{x:Null}" Foreground="{x:Null}" Grid.Row="1"
                    Click="ButtonBase_OnClickToolkits">
                <Label Content="Toolkits"/>

            </Button>
            <!-- View timme registrations button -->
            <Button Margin="0,0,0,0" Width="150"
                        Height="50" HorizontalAlignment="Right"  BorderBrush="{x:Null}" Foreground="{x:Null}" Grid.Row="2"
                    Click="ButtonBase_OnClickTimeregistrations">
                <Label Content="Timeregistrations" />
            </Button>
            <Button Margin="0,0,0,0" Width="150"
                        Height="50" HorizontalAlignment="Right" VerticalAlignment="Bottom" BorderBrush="{x:Null}" Foreground="{x:Null}" Grid.Row="4">
                <Label Content="Settings"/>
            </Button>
        </Grid>


        <!--Column 1-->
        <!--Background="DarkSlateGray"-->
        <!--Background="sc#0.18,0.36,0.4"-->
        <!--Background="DarkTurqoise"-->
        <Grid Name="ContentGrid" Grid.Column="1" Background="sc#0.15,0.15,0.20">
            <Label Content="Welcome to TimeSync" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" Foreground="#FFF" FontStyle="Italic" FontFamily="Times New Roman"></Label>

        </Grid>


    </Grid>


</Page>
