<Page x:Class="TimeSync.UI.View.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TimeSync.UI.View"
      xmlns:viewModel="clr-namespace:TimeSync.UI.ViewModel"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings">

    <Grid Background="{StaticResource WindowFrameBackgroundBrush}" 
          d:DataContext="{d:DesignInstance viewModel:SettingsViewModel}">
        
        <StackPanel Orientation="Horizontal" Margin="10,10,0,0"
                    VerticalAlignment="Top" HorizontalAlignment="Left">
            <Label Content="Current page highlight color:" Foreground="{StaticResource TextBrushOange}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
            <xctk:ColorPicker Width="150" SelectedColor="{Binding ButtonHoverColor}" />
        </StackPanel>
        
    </Grid>
</Page>
