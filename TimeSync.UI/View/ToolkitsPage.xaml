<Page x:Class="TimeSync.UI.View.ToolkitsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:viewModel="clr-namespace:TimeSync.UI.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="600"
      Title="ToolkitsPage">

    <Page.DataContext>
        <viewModel:ToolkitInfoViewModel/>
    </Page.DataContext>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Left" Margin="10,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label Content="Toolkit name" Grid.Row="0" HorizontalAlignment="Center" FontSize="16"/>
            <Label Content="URL" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" FontSize="16"/>
            <ScrollViewer Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" VerticalScrollBarVisibility="Auto">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="350"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <ItemsControl Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" ItemTemplate="{StaticResource ToolkitInfoDataTemplate}" ItemsSource ="{Binding ListOfToolkits}" />
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <Button Command="{Binding AddNewToolkitCommand}" Content="Add row" Grid.Column="1" HorizontalAlignment="Right" Grid.Row="3" VerticalAlignment="Center" Margin="0,0,50,0"
                Style="{StaticResource RegularButton}" Click="Button_Click"/>
        <Button Command="{Binding SaveToolkitsCommand}" Content="Save toolkits" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center"
                Style="{StaticResource RegularButton}"/>
        
        <Label Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" VerticalAlignment="Top" FontFamily="Trebuchet MS"
               FontWeight="Bold" FontSize="12" Foreground="#FFF"  HorizontalAlignment="Center">
            TimeSync - Account information
        </Label>


        <!-- View Toolkits button -->


    </Grid>
</Page>
