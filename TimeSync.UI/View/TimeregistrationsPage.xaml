<Page x:Class="TimeSync.UI.View.TimeregistrationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
      xmlns:viewModel="clr-namespace:TimeSync.UI.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="600"
      Title="TimeregistrationsPage">

    <Page.DataContext>
        <viewModel:TimeregistrationViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" VerticalScrollBarVisibility="Auto">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="00,0,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="75"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <ItemsControl Grid.Column="0" Grid.ColumnSpan="5" ItemTemplate="{StaticResource TimeregDataTemplate}" ItemsSource ="{Binding listOfTimeregs}"></ItemsControl>
            <Button Grid.Column="4" Grid.Row="1" Command="{Binding AddTest}" Content="Add row" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75"/>
            </Grid>
        </StackPanel>
        </ScrollViewer>
        <Button Command="{Binding SynchroniseCommand}" Content="Synchronise" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Width="75"/>


        <Label Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" VerticalAlignment="Top" FontFamily="Trebuchet MS"
               FontWeight="Bold" FontSize="12" Foreground="#0066cc"  HorizontalAlignment="Center">
            TimeSync - Timeregistrations
        </Label>

        <!-- View account information button -->
        <Button Grid.Column="0" Grid.Row="1" Margin="0,0,0,0" Width="100"
                Height="50" HorizontalAlignment="Right" Click="ButtonBase_OnClickUserAccount">
            <TextBlock>Account<LineBreak/>information</TextBlock>
        </Button>

        <!-- View Toolkits button -->
        <Button Grid.Column="0" Grid.Row="2" Margin="0,0,0,0" Width="100"
                Height="50" HorizontalAlignment="Right" Click="ButtonBase_OnClickToolkits">
            <TextBlock>Toolkits</TextBlock>
        </Button>

        <!-- View timme registrations button -->
        <Button Grid.Column="0" Grid.Row="3" Margin="0,0,0,0" Width="100"
                Height="50" HorizontalAlignment="Right" Click="ButtonBase_OnClickTimeregistrations">
            <TextBlock>Timeregistrations</TextBlock>
        </Button>
        
        <Grid.Background>
            <ImageBrush ImageSource="../watermark.png"/>
        </Grid.Background>
    </Grid>
</Page>
