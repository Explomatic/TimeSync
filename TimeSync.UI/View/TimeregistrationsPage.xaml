<Page x:Class="TimeSync.UI.View.TimeregistrationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
      xmlns:viewModel="clr-namespace:TimeSync.UI.ViewModel"
      xmlns:src="clr-namespace:TimeSync.Model;assembly=TimeSync.Model"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="700"
      Title="TimeregistrationsPage">

    <Page.DataContext>
        <viewModel:TimeregistrationViewModel/>
    </Page.DataContext>
    
    <Page.Resources>
        <DataTemplate x:Key="TimeregDataTemplate"  DataType="{x:Type src:Timeregistration}">
            <StackPanel Orientation="Horizontal">
                <ComboBox Width="60" Margin="5,5,5,5" ItemsSource="{Binding ListOfToolkitNames}" SelectedItem="{Binding ToolkitDisplayName}" DropDownClosed="CboxToolkitSelected"/>
                <ComboBox Width="100" Margin="5,5,5,5" ItemsSource="{Binding ListOfTeams}" SelectedItem="{Binding Team}" DropDownClosed="CboxTeamSelected"/>
                <TextBox Width="65" Margin="5,5,5,5" Text="{Binding CaseId}" VerticalAlignment="Center"/>
                <TextBox Width="100" Margin="5,5,5,5" Text="{Binding Duration}" VerticalAlignment="Center"/>
                <ComboBox Width="100" Margin="5,5,5,5" ItemsSource="{Binding ListOfTimeslots}" SelectedItem="{Binding Timeslot}" VerticalAlignment="Center"/>
                <DatePicker Width="150" Margin="5,5,5,5" SelectedDate="{Binding DoneDate}" />
                <!--<DatePicker Width="150" Margin="5,5,5,5" SelectedDate="{Binding DoneDate}" Text="{Binding DoneDate}" />-->
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="sc#0.15,0.15,0.20">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Left" Margin="10,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            
            <Label Content="Toolkit" Grid.Row="0" HorizontalAlignment="Center" FontSize="16"/>
            <Label Content="Team" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" FontSize="16"/>
            <Label Content="Case ID" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" FontSize="16"/>
            <Label Content="Hours" Grid.Column="3" Grid.Row="0" HorizontalAlignment="Center" FontSize="16"/>
            <Label Content="Timeslot" Grid.Column="4" Grid.Row="0" HorizontalAlignment="Center" FontSize="16"/>
            <Label Content="Date" Grid.Column="5" Grid.Row="0" HorizontalAlignment="Center" FontSize="16"/>
            <ScrollViewer Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="6" VerticalScrollBarVisibility="Auto">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="160"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <ItemsControl Grid.ColumnSpan="6" ItemTemplate="{StaticResource TimeregDataTemplate}" ItemsSource ="{Binding Timeregistrations}" />
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <Button Command="{Binding AddNewTimeregistrationCommand}" Content=" Add timereg " HorizontalAlignment="Right" Grid.Row="3" VerticalAlignment="Center" Margin="0,0,50,0"
                Style="{StaticResource RegularButton}" />
        <Button Command="{Binding SynchroniseCommand}" Content=" Synchronise " HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center"
                Style="{StaticResource RegularButton}"/>


        <Label Grid.Row="0" VerticalAlignment="Top" FontFamily="Trebuchet MS"
               FontWeight="Bold" FontSize="12" Foreground="#FFF"  HorizontalAlignment="Center">
            TimeSync (BETA) - Timeregistrations
        </Label>
    </Grid>
</Page>

